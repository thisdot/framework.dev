{
	"include": ["./packages/*/src/**/*", "./*.d.ts"],
	"compilerOptions": {
		"strict": true,
		"lib": ["ES2021", "DOM"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noEmit": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"paths": {
			"@framework/system": ["./packages/system/*"]
		}
	}
}
